@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<body class="dark-bg">
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="/assets/images/bg/breadcrumb-bg1.jpeg" data-overlay="dark" data-opacity="5">
        <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
        <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center">
                    <h2 class="page-title">Forgot password</h2>
                    <div class="cafena-breadcrumb breadcrumbs">
                        <ul class="list-unstyled d-flex align-items-center justify-content-center">
                            <li class="cafenabcrumb-item duxinbcrumb-end">
                                <span>Forgot password</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

<hr />

    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="reservation__wrapper reservation__wrapper--2">
                    <div class="section-heading section-heading__black text-center mb-35">
                        <h3 class="title">Forgot your password?</h3>
                        <label>write your email and press the botton to reset your password</label>
                    </div>
                    <div class="reservation__form reservation__form--2 mt-none-30 text-center">
         <div class="cart-form">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col text-center">
                 <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email.."/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
           </div>
           <div class="form-group mt-30">
            <button type="submit" class="site-btn">Reset Password</button>
            </div>
        </form>
        </div>
    </div>
    </div>
    </div>
    </div>
    
</div>

</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
