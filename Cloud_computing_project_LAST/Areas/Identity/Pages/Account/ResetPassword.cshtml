@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<style>
    .custom-input-group {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 10px;
        font-size: 18px; /* Adjust the font size to make the icon bigger */
        cursor: pointer;
    }

    .form-control {
        padding-right: 40px; /* Adjust as needed to make room for the bigger icon on the right */
    }
    </style>
<body class="dark-bg">
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="/assets/images/bg/breadcrumb-bg1.jpeg" data-overlay="dark" data-opacity="5">
        <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
        <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center">
                    <h2 class="page-title">Reset password</h2>
                    <div class="cafena-breadcrumb breadcrumbs">
                        <ul class="list-unstyled d-flex align-items-center justify-content-center">
                            <li class="cafenabcrumb-item duxinbcrumb-end">
                                <span>Reset password</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
<hr />
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="reservation__wrapper reservation__wrapper--2">
                    <div class="section-heading section-heading__black text-center mb-35">
                        <h3 class="title">Resetpassword</h3>
                    </div>
                    <div class="reservation__form reservation__form--2 mt-none-30 text-center">
       <div class="col text-center">
        <div class="cart-form">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />
               <div class="from-group mt-30">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your Email.."/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
               <div class="from-group mt-30">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="New password"/>
                 <i class="toggle-password fas fa-eye" onclick="togglePasswordVisibility(this)"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="from-group mt-30">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password"/>
                <i class="toggle-password fas fa-eye" onclick="togglePasswordVisibility(this)"></i>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                                    <script>
                                        function togglePasswordVisibility(icon) {
                                            const input = icon.previousElementSibling; // Get the input field
                                            if (input.type === 'password') {
                                                input.type = 'text'; // Change the input type to text to show the password
                                                icon.classList.remove('fa-eye');
                                                icon.classList.add('fa-eye-slash'); // Change the icon to a slash icon
                                            } else {
                                                input.type = 'password'; // Change the input type back to password
                                                icon.classList.remove('fa-eye-slash');
                                                icon.classList.add('fa-eye'); // Change the icon back to an eye icon
                                            }
                                        }

                                    </script>

            <div class="from-group mt-30">
            <button type="submit" class="site-btn">Reset</button>
            </div>
        </form>
        </div>
                        </div>
    </div>
    </div>
    </div>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
