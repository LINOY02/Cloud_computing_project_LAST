
@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class=" dark-bg">
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="/assets/images/bg/breadcrumb-bg1.jpeg" data-overlay="dark" data-opacity="5">
        <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
        <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center">
                    <h2 class="page-title">Reservation</h2>
                    <div class="cafena-breadcrumb breadcrumbs">
                        <ul class="list-unstyled d-flex align-items-center justify-content-center">
                            <li class="cafenabcrumb-item duxinbcrumb-end">
                                <span>Take your seat</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->
<!-- reservation area start -->
<section class="reservation__area reservation__area--2 position-relative pt-120 pb-120">
    <span class="shape shape__1 position-absolute"><img src="~/assets/images/shape/hero-shape-2-1.png" alt=""></span>
    <span class="shape shape__2 position-absolute"><img src="~/assets/images/shape/hero-shape-2-2.png" alt=""></span>
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="reservation__wrapper reservation__wrapper--2">
                    <div class="section-heading section-heading__black text-center mb-35">
                        <h2 class="title">Reservation form</h2>
                    </div>
                    <div class="reservation__form reservation__form--2 mt-none-30 text-center">
                            <form id="reservationForm" asp-controller="Home" asp-action="Reservation" method="post">
                            <div class="row">
                                <div class="col-xl-6 col-lg-6">
                                    <div class="from-group mt-30">
                                            <input type="text" name="name" id="name" placeholder="Enter your name" required>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6">
                                    <div class="from-group mt-30">
                                            <input type="tel" name="tel" id="tel" placeholder="Enter your number" required>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6">
                                    <div class="from-group mt-30">
                                            <select name="subject" id="subject" required>
                                                <option value="" disabled selected>Seats*</option>
                                            <option value="1">For 2 Persons</option>
                                            <option value="2">For 3 Persons</option>
                                            <option value="3">For 4 Persons</option>
                                            <option value="4">For 5 Persons</option>
                                            <option value="5">For 6 Persons</option>
                                            <option value="6">For 10 Persons</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6">
                                    <div class="from-group mt-30">
                                            <input type="date" id="date" name="date" oninput="validateDate()" required>
                                    </div>
                                </div>
                                    <script>
                                        function validateDate() {
                                            var selectedDate = new Date(document.querySelector('input[type="date"]').value);
                                            var currentDate = new Date();
                                            var blockedDay = 6;

                                            if ((selectedDate < currentDate) || (selectedDate.getDate === blockedDay)) {
                                                alert("Please choose a date equal to or later than today.");
                                                document.querySelector('input[type="date"]').value = ""; // Clear the date field
                                            }
                                        }

                                        document.addEventListener('DOMContentLoaded', function () {
                                            // Set the min attribute for the date input to the current date
                                            var today = new Date().toISOString().split('T')[0];
                                            document.querySelector('input[type="date"]').min = today;
                                        });
                                    </script>
                                <div class="col-xl-6 col-lg-6">
                                    <div class="from-group mt-30">
                                            <input type="time" id="time" name="time" required>
                                    </div>
                                </div>
                                    <script>
                                        document.getElementById("time").addEventListener("input", function () {
                                            var inputTime = this.value;
                                            var minTime = "08:00";
                                            var maxTime = "23:00";

                                            if (inputTime < minTime || inputTime > maxTime) {
                                                alert("Sorry we are closed during these hours If you wish, we are available between 08:00 and 23:00");
                                                this.value = ""; // Clear the input if the selected time is outside the allowed range
                                            }
                                        });
                                    </script>
                                <div class="col-xl-6 col-lg-6">
                                    <div class="from-group mt-30">
                                            <input type="email" id="2email" name="2email" placeholder="Enter your mail" required>
                                    </div>
                                </div>
                                <div class="col-xl-12 text-center">
                                    <button type="submit" class="site-btn mt-30" action="">Submit you request</button>
                                </div>
                            </div>
                        </form>
                            <script>
                                document.getElementById("reservationForm").addEventListener("submit", function (event) {
                                    event.preventDefault(); // Prevent the form from submitting

                                    // Clear input fields
                                    document.getElementById("name").value = "";
                                    document.getElementById("tel").value = "";
                                    document.getElementById("subject").value = "";
                                    document.getElementById("date").value = "";
                                    document.getElementById("time").value = "";
                                    document.getElementById("2email").value = "";

                                    // Add similar lines to clear other input fields

                                    // Optionally, you can display a confirmation message to the user
                                    ModelState.AddModelError(string.Empty, "Reservation submitted successfully!");
                                    //alert("Reservation submitted successfully!");
                                });
                            </script>
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- reservation area end -->
</body>