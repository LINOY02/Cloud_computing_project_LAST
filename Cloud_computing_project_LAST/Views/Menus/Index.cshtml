@model IEnumerable<Cloud_computing_project_LAST.Models.Menu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/assets/css/stylecafe.css" rel="stylesheet" />
    <style>
        body {
            background-color: black
        }

        .custom-link {
            color: white; /* Set the text color to white */
            text-decoration: none; /* Remove underline */
        }

            .custom-link:hover {
                color: #C7A17A; /* Change the text color to blue on hover */
            }
    </style>
</head>
<body class="dark-bg">
<!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="/assets/images/bg/breadcrumb-bg1.jpeg" data-overlay="dark" data-opacity="5">
    <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
    <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-12 text-center">
                <h2 class="page-title">Cafena</h2>
                <div class="cafena-breadcrumb breadcrumbs">
                    <ul class="list-unstyled d-flex align-items-center justify-content-center">
                        <li class="cafenabcrumb-item duxinbcrumb-end">
                            <span>Manage Product</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach ( var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="custom-link">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="custom-link">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="custom-link">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
  @*  <p>
        <a asp-action="Create">Create New</a>
    </p>*@
    <div class="col-xl-12 text-center" style="margin-bottom:1px">
        <a asp-action="Create" type="submit" class="site-btn mt-30" style="padding-top:10px">CREATE NEW</a>
    </div>

    <!-- populer menu area end -->
</body>