@model Cloud_computing_project_LAST.Models.Orderr

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="dark-bg">
    <main>
        <!-- breadcrumb area start -->
        <section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="/assets/images/bg/breadcrumb-bg1.jpeg" data-overlay="dark" data-opacity="5">
            <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
            <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
            <div class="container">
                <div class="row">
                    <div class="col-xl-12 text-center">
                        <h2 class="page-title">Cafena Checkout</h2>
                        <div class="cafena-breadcrumb breadcrumbs">
                            <ul class="list-unstyled d-flex align-items-center justify-content-center">
                                <li class="cafenabcrumb-item duxinbcrumb-end">
                                    <span>order detials</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- breadcrumb area end -->
        <div class="checkout-area pt-120 pb-120">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12 text-center">
                        <div class="section-heading section-heading__black mb-40">
                            <span class="sub-title">Order Detials</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="cart-wrapper checkout-wrapper" style="background:white">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="checkout-top">
                                        <h3>The order is expected to arrive in about an hour</h3>
                                        <div class="tab-content" id="pdContent">
                                            <div class="tab-pane fade show active" id="pd-1" role="tabpanel" aria-labelledby="pd-1-tab">
                                                <div class="cart-form">
                                                    
                                                        <div class="row">
                                                            <div class="col-xl-6">
                                                                <div class="form-group" style="display: flex; align-items: center;">
                                                                    <label asp-for="OrderDate" class="control-label" style="margin-right: 10px; color:white;">.</label>
                                                                    <div style="flex: 1;">
                                                                        <label id="currentDateTimeLabel" class="form-control" style="border: none;">
                                                                            @ViewData["OrderDate"]
                                                                        </label>
                                                                    </div>
                                                                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-xl-6">
                                                                <div class="form-group" style="display: flex; align-items: center;">
                                                                    <label asp-for="DeliveryDate" class="control-label" style="margin-right: 10px; color:white;">.</label>
                                                                    <div style="flex: 1;">
                                                                        <label id="deliveryDateLabel" class="form-control" style="border: none;">
                                                                            @ViewData["DeliveryDate"]
                                                                        </label>
                                                                    </div>
                                                                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-xl-6">
                                                                <div class="form-group">
                                                                    <label asp-for="Name" class="control-label">First Name*</label>
                                                                    <input asp-for="Name" class="form-control" />
                                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-xl-6">
                                                                <div class="form-group">
                                                                    <label asp-for="LastName" class="control-label">Last Name*</label>
                                                                    <input asp-for="LastName" class="form-control" />
                                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="City" class="control-label">City Name*</label>
                                                                <input asp-for="City" class="form-control" />
                                                                <span asp-validation-for="City" class="text-danger"></span>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="Address" class="control-label">Street Name*</label>
                                                                <input asp-for="Address" class="form-control" />
                                                                <span asp-validation-for="Address" class="text-danger"></span>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="streetNum" class="control-label">Street Number*</label>
                                                                <input asp-for="streetNum" class="form-control" />
                                                                <span asp-validation-for="streetNum" class="text-danger"></span>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="ZIPCode" class="control-label">ZIP Code*</label>
                                                                <input asp-for="ZIPCode" class="form-control" />
                                                                <span asp-validation-for="ZIPCode" class="text-danger"></span>
                                                            </div>
                                                            <div class="col-xl-6">
                                                                <div class="form-group">
                                                                    <label asp-for="PhoneNumber" class="control-label">Phone Number*</label>
                                                                    <input asp-for="PhoneNumber" class="form-control" />
                                                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-xl-6">
                                                                <div class="form-group">
                                                                    <label asp-for="Email" class="control-label">Email Adress*</label>
                                                                    <input asp-for="Email" class="form-control" />
                                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="Info" class="control-label"></label>
                                                                <input asp-for="Info" class="form-control" />
                                                                <span asp-validation-for="Info" class="text-danger"></span>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="TotalPrice" class="control-label" style="margin-right: 10px; border: none !important;"></label>
                                                                <input asp-for="TotalPrice" class="form-control" />
                                                                 @*<div style="flex: 1;">
                                                                    <label id="TotalPrice" class="form-control" style="border: none;">
                                                                        @ViewData["TotalPrice"]
                                                                    </label>
                                                                </div>*@
                                                                <span asp-validation-for="TotalPrice" class="text-danger"></span>
                                                            </div>
                                                            <h3 style="color:white">
                                                                .
                                                            </h3>
                                                            <h3 style="color:white">
                                                                .
                                                            </h3>
                                                            <div class="col-xl-12 d-flex align-items-center justify-content-center text-center">
                                                                <nav>
                                                                    <div class="nav" id="shop-filter-tab" role="tablist">
                                                                        <a class="nav-link" id="pd-1-tab" data-bs-toggle="tab" role="tab" href="/Orderr/Create#paypal-button-container" aria-controls="pd-1" aria-selected="true" onclick="validateSelection()">
                                                                            Paypal
                                                                        </a>
                                                                        <a class="nav-link" id="pd-2-tab" data-bs-toggle="tab" role="tab" aria-controls="pd-1" aria-selected="true" onclick="validateSelection()">
                                                                            Cash on Delivery
                                                                        </a>
                                                                    </div>
                                                                </nav>
                                                            </div>
                                                            
                                                        </div>
                                                        <script>
                                                            function validateSelection() {
                                                                var paypalTab = document.getElementById("pd-1-tab");
                                                                var codTab = document.getElementById("pd-2-tab");
                                                                if (paypalTab.classList.contains("active") || codTab.classList.contains("active")) {
                                                                    document.getElementById("createButton").disabled = false;
                                                                } 
                                                                else {
                                                                    document.getElementById("createButton").disabled = true;
                                                                }
                                                            }
                                                        </script>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                        <script src="https://www.paypal.com/sdk/js?client-id=AQ3cycaNrcGUw0JcKGMovAvR81yjV8u9eVIQslKzwrm6944bZqnh6J_oOMje1xMHUSeJJm9Cjss6H5eN&components=buttons"></script>
                                        <div id="paypal-button-container" style="max-width:1000px;"></div>
                                        <script src="https://www.paypal.com/sdk/js?client-id=AQ3cycaNrcGUw0JcKGMovAvR81yjV8u9eVIQslKzwrm6944bZqnh6J_oOMje1xMHUSeJJm9Cjss6H5eN&components=buttons"></script>
                                        <div id="paypal-button-container" style="max-width:1000px;"></div>
                                        <script>
                                            paypal.Buttons({
                                                style: {
                                                    disableMaxWidth: true
                                                },
                                                onClick: function () {
                                                    // Add your custom logic or action here
                                                    //  alert('PayPal button clicked!');
                                                }
                                            }).render('#paypal-button-container');
                                        </script>
                                        <div class="site-btn mt-30">
                                            <input id="createButton" type="submit" value="Submit Order" style="font-size: 16px; color: black; background: none !important;" disabled />
                                        </div>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>