@model IEnumerable<Cloud_computing_project_LAST.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/assets/css/stylecafe.css" rel="stylesheet" />
    <style>
        body {
            background-color: black
        }
    </style>
</head>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th style="width:120px" @Html.DisplayNameFor(model =>model.OrderDate)>
                o-date
            </th>
            <th style="width:120px" @Html.DisplayNameFor(model => model.DeliveryDate)>
                d-date
            </th>
            <th style="width:50px" @Html.DisplayNameFor(model => model.TotalPrice)>
               total
            </th>
            <th style="width:80px" @Html.DisplayNameFor(model => model.Name)>
                name
            </th>
            <th style="width:80px" @Html.DisplayNameFor(model => model.LastName)>
                l-name
            </th>
            <th @Html.DisplayNameFor(model => model.City)>
                city
            </th>
            <th style="width:0px" @Html.DisplayNameFor(model => model.Address)>
               street
            </th>
            <th style="width:50px" @Html.DisplayNameFor(model => model.streetNum)>
                
            </th>
            <th @Html.DisplayNameFor(model => model.ZIPCode)>
                zip
            </th>
            <th @Html.DisplayNameFor(model => model.PhoneNumber)>
                phone
            </th>
            <th @Html.DisplayNameFor(model => model.Email)>
                email
            </th>
            <th @Html.DisplayNameFor(model => model.Info)>
                info
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.City)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                <td >
                @Html.DisplayFor(modelItem => item.streetNum)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.ZIPCode)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
