@model Cloud_computing_project_LAST.Models.UserInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        body {
            background-color: black
        }

        .custom-link {
            color: black; /* Set the text color to white */
        }

            .custom-link:hover {
                color: #C7A17A; /* Change the text color to blue on hover */

            }

        .btn.btn-primary {
            /* Your primary button styles */
            font-size: 12px;
            text-transform: uppercase;
            color: #ffffff;
            letter-spacing: 2px;
            background: #C7A17A;
            padding: 9.5px 34px;
            text-decoration: none;
            border-radius: 5px;
            position: relative;
            z-index: 1;
            display: inline-block;
            border: 1px solid #C7A17A;
            font-weight: 500;
        }

            /* Hover effect for the primary button */
            .btn.btn-primary:hover {
                background: black;
                border-color: black;
                color: white;
            }
</style>
</head>
<hr />
<!-- breadcrumb area start -->
<section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="/assets/images/bg/breadcrumb-bg1.jpeg" data-overlay="dark" data-opacity="5">
    <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
    <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-12 text-center">
                <h2 class="page-title">Register</h2>
                <div class="cafena-breadcrumb breadcrumbs">
                    <ul class="list-unstyled d-flex align-items-center justify-content-center">
                        <li class="cafenabcrumb-item duxinbcrumb-end">
                            <span>Register</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<div class="checkout-area pt-120 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="cart-wrapper checkout-wrapper" style="background: white;">
                    <div class="row">
                        <div class="col-xl-9">
                            <div class="checkout-top">
                                <h4 class="title">Register</h4>
                                <div class="cart-form">
                                    <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="row">
                                            <div class="col-xl-6">
                                                <div class="from-group mt-30">
                                                    <label for="fname">First Name*</label>
                                            <input asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        </div>
                                            <div class="col-xl-6">
                                                            <div class="from-group mt-30">
                                                                <label for="lname">Last Name*</label>
                                            <input asp-for="LastName" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                        </div>
                                            <div class="col-xl-12">
                                                <div class="from-group mt-30">
                                                    <label for="tname">Town / City *</label>
                                                    <input asp-for="City" class="form-control" />
                                                    <span asp-validation-for="City" class="text-danger"></span>
                                                 </div>
                                             </div>
                                            <div class="col-xl-12">
                                                <div class="from-group mt-30">
                                                    <label for="rname">Address *</label>
                                                    <input asp-for="Street" class="form-control" />
                                                    <span asp-validation-for="Street" class="text-danger"></span>
                                                </div>
                                                </div>
                                     
                                         <div class="col-xl-12">
                                                        <div class="from-group mt-30">
                                                            <label for="hname">Street Number *</label>
                                            <input asp-for="StreetNum" class="form-control" />
                                            <span asp-validation-for="StreetNum" class="text-danger"></span>
                                        </div>
                                        </div>
                                            <div class="col-xl-12">
                                                <div class="from-group mt-30">
                                                    <label for="zname">Postcode / ZIP (optional)*</label>
                                            <input asp-for="ZIPCode" class="form-control" />
                                            <span asp-validation-for="ZIPCode" class="text-danger"></span>
                                        </div>
                                        </div>
                                            <div class="col-xl-6">
                                                <div class="from-group mt-30">
                                                    <label for="tel">Phone</label>
                                                    <input asp-for="PhoneNumber" class="form-control" />
                                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                    </div>
                                           </div>
                                           </div>
                                        <div class="row">
                                        <div class="form-group mt-30">
                                                <div class="col-xl-12 mt-4 text-center">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                            </div>
                                        </div>
                                        </div>
                                        
                                    </form>
                                </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
       
   
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
